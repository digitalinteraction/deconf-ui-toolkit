{
  "compilerOptions": {
    "target": "ES2018",
    "module": "es2020",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    // "allowJs": true,
    // "checkJs": true,
    "types": ["node", "vue"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "tests/**/*.ts"]
}
